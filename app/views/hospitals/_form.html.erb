<%= simple_form_for(@hospital, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>
<div class="gb_padding">
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :phone1 %>
    <%= f.input :phone2 %>
    <%= f.input :image, :as => :file %>
    <%= f.input :description %>
    <%= f.association :departments, :wrapper_html => { :class => 'form_last_field' } %>
  </div>
</div>
  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
