<%= simple_form_for(@involvement, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :allow_appointment %>
    <%= f.input :price %>
    <%= f.input :from %>
    <%= f.input :to %>
    <%= f.association :hospital %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
