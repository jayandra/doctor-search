<div class="page-header">
  <%= link_to doctors_path, :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end %>
  <%= link_to edit_doctor_path(@doctor), :class => 'btn btn-primary' do %>
    <i class="icon-pencil icon-white"></i>
    Edit
  <% end %>
  <h1>Listing doctors</h1>
</div>

<dl class="show_page">
  <dt>Name:</dt>
  <dd><%= @doctor.name %></dd>

  <dt>Department:</dt>
  <dd><%= @doctor.department.name %></dd>

  <dt>Primary involvement:</dt>
  <dd><%= @doctor.primary_hospital.name %></dd>

  <dt>Email:</dt>
  <dd><%= @doctor.email %></dd>

  <dt>Mobile1:</dt>
  <dd><%= @doctor.mobile1 %></dd>

  <dt>Mobile2:</dt>
  <dd><%= @doctor.mobile2 %></dd>

  <dt>Phone1:</dt>
  <dd><%= @doctor.phone1 %></dd>

  <dt>Phone2:</dt>
  <dd><%= @doctor.phone2 %></dd>

  <dt>Message:</dt>
  <dd><%= @doctor.message %></dd>
  
</dl>
