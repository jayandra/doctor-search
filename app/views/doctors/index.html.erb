<div class="page-header">
  <%= link_to new_doctor_path, :class => 'btn btn-primary' do %>
    <i class="icon-plus icon-white"></i>
    New Doctor
  <% end %>
  <h1>Listing doctors</h1>
</div>

<table class="table table-bordered table-striped1 green_block">
  <thead>
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th>Primary involvement</th>
      <th>Email</th>
      <th>Phone1</th>
      <th>Phone2</th>
      
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% @doctors.each do |doctor| %>
    <tr>
      <td><%= doctor.name %></td>
      <td><%= doctor.department.name %></td>
      <td><%= doctor.primary_hospital.name %></td>
      <td><%= doctor.email %></td>
      <td><%= doctor.phone1 %></td>
      <td><%= doctor.phone2 %></td>
      
      <td><%= link_to 'Show', doctor %></td>
      <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
      <td><%= link_to 'Destroy', doctor, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
<% end %>
  </tbody>
</table>
