<div class="page-header">
  <%= link_to searches_path, :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end %>
  <%= link_to edit_search_path(@search), :class => 'btn btn-primary' do %>
    <i class="icon-pencil icon-white"></i>
    Edit
  <% end %>
  <h1>Listing searches</h1>
</div>

<dl>
  <dt>Doctor:</dt>
  <dd><%= @search.doctor %></dd>

  <dt>Department:</dt>
  <dd><%= @search.department %></dd>

  <dt>Hospital:</dt>
  <dd><%= @search.hospital %></dd>

  <dt>Search template:</dt>
  <dd><%= @search.search_template %></dd>

</dl>
