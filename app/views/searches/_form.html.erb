<%= simple_form_for(@search, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :doctor %>
    <%= f.input :department %>
    <%= f.input :hospital %>
    <%= f.input :search_template %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
