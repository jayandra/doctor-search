<div class="page-header">
  <%= link_to departments_path, :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end %>
  <%= link_to edit_department_path(@department), :class => 'btn btn-primary' do %>
    <i class="icon-pencil icon-white"></i>
    Edit
  <% end %>
  <h1>Listing departments</h1>
</div>

<dl class="show_page">
  <dt>Name:</dt>
  <dd><%= @department.name %></dd>

  <dt>Hospitals:</dt>
  <% @department.hospitals.each do |h| %>
    <dd><%= h.name %></dd>
  <% end %>
</dl>
